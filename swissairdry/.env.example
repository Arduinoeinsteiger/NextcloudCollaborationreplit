# SwissAirDry - Beispiel-Umgebungsvariablen
# Diese Datei als .env kopieren und entsprechend anpassen

# Datenbank-Konfiguration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=swissairdry
DATABASE_URL=postgresql://postgres:postgres@db:5432/swissairdry

# API-Server-Konfiguration
PRIMARY_API_HOST=api.vgnc.org
PRIMARY_API_PORT=443
PRIMARY_API_SCHEME=https
BACKUP_API_HOST=swissairdry.replit.app
BACKUP_API_PORT=443
BACKUP_API_SCHEME=https
API_PREFIX=/api/v1

# MQTT-Konfiguration
MQTT_BROKER=mqtt
MQTT_PORT=1883
MQTT_USERNAME=swissairdry
MQTT_PASSWORD=mqtt_password

# Nextcloud-Integration
NEXTCLOUD_URL=https://cloud.vgnc.org

# JWT-Konfiguration f√ºr Authentifizierung
JWT_SECRET=supersecretkey
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS-Konfiguration
CORS_ORIGINS=["*"]

# Portkonfiguration
API_PORT=5000
MQTT_PORT_EXTERNAL=1883
MQTT_WEBSOCKET_PORT=9001
NEXTCLOUD_PORT=8080