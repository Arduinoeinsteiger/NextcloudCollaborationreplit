# SwissAirDry Umgebungsvariablen
# Diese Datei nach .env kopieren und mit den tatsächlichen Werten füllen

# Allgemeine Einstellungen
APP_ENVIRONMENT=production
APP_SECRET_KEY=ein_geheimer_schluessel_hier_einsetzen
DEBUG=False

# Datenbank-Einstellungen
POSTGRES_USER=swissairdry
POSTGRES_PASSWORD=ein_sicheres_passwort_hier_einsetzen
POSTGRES_DB=swissairdry

# JWT-Token-Einstellungen
JWT_SECRET_KEY=ein_geheimer_jwt_schluessel_hier_einsetzen
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API-Server-Einstellungen
PRIMARY_API_HOST=api.vgnc.org
PRIMARY_API_PORT=443
PRIMARY_API_SCHEME=https
BACKUP_API_HOST=swissairdry.replit.app
BACKUP_API_PORT=443
BACKUP_API_SCHEME=https

# MQTT-Einstellungen
MQTT_USERNAME=swissairdry
MQTT_PASSWORD=ein_sicheres_mqtt_passwort_hier_einsetzen

# Nextcloud-Einstellungen
NEXTCLOUD_URL=https://cloud.vgnc.org
NEXTCLOUD_APP_KEY=nextcloud_app_key_hier_einsetzen
NEXTCLOUD_POSTGRES_DB=nextcloud
NEXTCLOUD_POSTGRES_USER=nextcloud
NEXTCLOUD_POSTGRES_PASSWORD=ein_sicheres_nextcloud_db_passwort_hier_einsetzen
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=ein_sicheres_admin_passwort_hier_einsetzen
NEXTCLOUD_TRUSTED_DOMAINS=cloud.vgnc.org localhost nextcloud.localhost