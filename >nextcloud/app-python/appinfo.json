{
    "id": "swissairdry",
    "name": "Swiss Air Dry",
    "version": "1.0.0",
    "summary": "IoT-Geräteverwaltung für Trocknungsgeräte",
    "description": "Umfassende Lösung zur Überwachung und Verwaltung von Trocknungsgeräten für die Baubranche.",
    "category": "tools",
    "author": "SwissAirDry Team",
    "homepage": "https://swissairdry.com",
    "bugs": "https://github.com/swissairdry/swissairdry/issues",
    "repository": "https://github.com/swissairdry/swissairdry.git",
    "readme": "https://github.com/swissairdry/swissairdry/blob/main/README.md",
    "license": "AGPL-3.0-or-later",
    "app-requirements": {
        "python": ">=3.9.0,<3.12.0"
    },
    "dependencies": {
        "nextcloud": {
            "min-version": "26.0.0",
            "max-version": "27.0.0"
        }
    },
    "app_type": "app",
    "daemon_config": {
        "daemon_name": "swissairdry-daemon",
        "script_path": "main/daemon.py",
        "protocol": "http",
        "listen_port": 8701
    },
    "containers": [
        {
            "command": "python3",
            "args": [
                "main/daemon.py"
            ],
            "env": {
                "APP_VERSION": "1.0.0",
                "DEBUG": "false"
            },
            "exec_mode": "daemon"
        }
    ],
    "apps": [
        {
            "name": "SwissAirDry",
            "url": "/",
            "icon": "app-icon.svg",
            "navigation": {
                "name": "Swiss Air Dry",
                "route": "/",
                "icon": "app-icon.svg",
                "order": 10
            }
        }
    ],
    "ui_elements": [
        {
            "type": "dashboard-widget",
            "id": "swissairdry-status-widget",
            "name": "Swiss Air Dry Status",
            "description": "Zeigt den aktuellen Status der Trocknungsgeräte an",
            "url": "/widget/status",
            "icon": "widget-icon.svg"
        },
        {
            "type": "menu-entry",
            "id": "swissairdry-menu",
            "name": "Swiss Air Dry",
            "url": "/",
            "icon": "app-icon.svg"
        }
    ],
    "admin_settings": {
        "name": "Swiss Air Dry",
        "description": "Einstellungen für die Swiss Air Dry App",
        "url": "/settings/admin"
    },
    "info": {
        "use_api": true,
        "translatable": true
    }
}