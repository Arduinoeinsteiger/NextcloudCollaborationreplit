# SwissAirDry Umgebungsvariablen
# Kopieren Sie diese Datei nach .env und passen Sie die Werte an

# Allgemeine Konfiguration
DEBUG=False
SECRET_KEY=supersecretkey

# API-Konfiguration
API_PORT=5000
API_DOMAIN=localhost:5000
BASE_URL=http://localhost:5000

# Datenbank-Konfiguration
DATABASE_URL=postgresql://swissairdry:swissairdry@postgres:5432/swissairdry
POSTGRES_PORT=5433

# Nextcloud-Integration (optional, nur wenn benötigt)
# Auf "False" setzen, wenn keine Nextcloud-Integration benötigt wird
STANDALONE_MODE=True
NEXTCLOUD_URL=
NEXTCLOUD_USER=
NEXTCLOUD_PASSWORD=

# Frontend-Konfiguration
FRONTEND_URL=http://localhost:8080

# MQTT-Konfiguration (optional, für IoT-Integration)
MQTT_PORT=1883
MQTT_WSS_PORT=8083
ESP32_UPDATE_PORT=8070