# SwissAirDry - Umgebungsvariablen
# Kopieren Sie diese Datei nach ".env" und passen Sie die Werte an

# Allgemeine Konfiguration
APP_NAME=SwissAirDry
APP_VERSION=1.0.0
APP_DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=5000
API_PREFIX=/api
API_DOMAIN=api.swissairdry.com
API_ALLOWED_ORIGINS=*

# Backup API Server (wenn verf√ºgbar)
BACKUP_API_HOST=backup.swissairdry.com
BACKUP_API_PORT=5000
BACKUP_API_PREFIX=/api

# MQTT Broker
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WS_PORT=9001
MQTT_USERNAME=swissairdry
MQTT_PASSWORD=your_secure_password
MQTT_TOPIC_PREFIX=swissairdry

# PostgreSQL Datenbank
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=swissairdry
POSTGRES_USER=swissairdry
POSTGRES_PASSWORD=your_secure_db_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Nextcloud Integration
NEXTCLOUD_HOST=nextcloud.swissairdry.com
NEXTCLOUD_PORT=8080
NEXTCLOUD_PROTOCOL=https
NEXTCLOUD_APP_NAME=swissairdry
NEXTCLOUD_API_KEY=your_nextcloud_api_key

# Authentifizierung
AUTH_SECRET_KEY=your_very_long_secure_random_key
AUTH_TOKEN_EXPIRY=86400  # 24 Stunden in Sekunden
AUTH_REFRESH_TOKEN_EXPIRY=2592000  # 30 Tage in Sekunden

# CORS Einstellungen
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/swissairdry/api.log

# Bexio API (falls verwendet)
BEXIO_API_URL=https://api.bexio.com
BEXIO_CLIENT_ID=your_bexio_client_id
BEXIO_CLIENT_SECRET=your_bexio_client_secret
BEXIO_REDIRECT_URI=http://localhost:5000/bexio/callback

# Web-Anwendung (falls als separater Dienst konfiguriert)
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_DOMAIN=app.swissairdry.com

# Docker-Konfiguration
DOCKER_RESTART_POLICY=unless-stopped
DOCKER_NETWORK_NAME=swissairdry_network