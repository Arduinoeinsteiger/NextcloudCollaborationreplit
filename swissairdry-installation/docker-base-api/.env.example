# SwissAirDry Konfiguration
# Diese Datei nach .env kopieren und Werte anpassen

# Datenbank-Konfiguration
POSTGRES_USER=swissairdry
POSTGRES_PASSWORD=swissairdry
POSTGRES_DB=swissairdry

# MQTT-Konfiguration
MQTT_BROKER=mqtt
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Nextcloud-Integration (optional)
NEXTCLOUD_URL=http://nextcloud:8080
NEXTCLOUD_USERNAME=admin
NEXTCLOUD_PASSWORD=admin

# API-Konfiguration
JWT_SECRET=geheim-niemals-im-produktiveinsatz-verwenden
LOG_LEVEL=INFO
DEBUG=False

# Feature-Flags
FEATURE_MQTT_ENABLED=true
FEATURE_NEXTCLOUD_ENABLED=true